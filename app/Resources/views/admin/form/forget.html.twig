{% extends "admin/auth.html.twig" %}

{% block message %}
<div class="login-message">
    {% if message.text is defined %}<div class="alert alert-{{ message.type }}">{{ message.text }}</div>{% endif %}
</div>
{% endblock %}

{% block content %}
<div class="well login-content">
    <div class="login-header">
        <img src="{{ theme_ref }}/admin/img/icons/icon_key.gif"> Password recovery
    </div>
    <div class="login-form">
        <form class="form-horizontal" method="post">
            <div class="form-group">
              <label for="inputLogin" class="col-sm-4 control-label">Username<br> or e-mail</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="inputLogin" name="_user">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-8">
                <input type="submit" class="btn btn-default" value="Recover">
              </div>
            </div>
        </form>
    <div class="login-footer">
        Input yor Login or E-mail.<br>
        New password will be sent to your e-mail.<br>
        Go to <a href="{{ path('admin_index') }}/">sing in</a>.
    </div>
</div>
{% endblock %}