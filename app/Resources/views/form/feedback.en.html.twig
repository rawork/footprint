<h3>{{ dbform.title }}</h3>
{% if frmMessage %}<div class="alert alert-{{ frmMessage[0] }}">{{ frmMessage[1] }}</div>{% endif %}
<form method="post" action="">
    <input type="text" name="person" placeholder="Name" />
    <input type="text" name="email" placeholder="E-mail" />
    <textarea name="message" placeholder="Message"></textarea>
    <div>
        <img class="captcha" src="/secureimage/{{ now }}">
        <input type="text" name="securecode" placeholder="Enter CAPTCHA">
        <input type="submit" value="{{ dbform.submit_text }}">
    </div>
</form>